<h1>Tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to(task.title, task_path(task)) %>
      <%= link_to("[edit]", task_edit_path(task.id)) %>
      <%= link_to "[delete]", task_path(task.id), method: :delete, "data-confirm": "Are you sure?" %>
    </li>
  <% end %>
</ul>
<p><%= link_to("Add a new task", tasks_new_path) %></p>
